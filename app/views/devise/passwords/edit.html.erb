<section>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), role: "form", html: {class: "form-horizontal panel panel-default", method: :put }) do |f| %>
          <div class="panel-heading">
            <h2>Change your password</h2>
          </div>
          <div class="panel-body">

            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "New password", class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password, autofocus: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password", class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>

          </div>
          <div class="panel-footer">
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Change my password", class: "btn btn-default" %>
              </div>
            </div>

          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>