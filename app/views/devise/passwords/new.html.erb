<section>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), role: "form", html: {class: "form-horizontal", :method => :post }) do |f| %>
          <h2>Forgot your password?</h2>
          <div class="well">

            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :email, class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter email" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9">
                <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
              </div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>